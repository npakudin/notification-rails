<p id="notice"><%= notice %></p>

<% if @user.is_admin %>

  <p>
    <strong>Name:</strong>
    <%= @tablet.name %>
  </p>

  <p>
    <strong>Token:</strong>
    <%= @tablet.token %>
  </p>

  <%= link_to 'Edit', edit_tablet_path(@tablet) %> |
<% else %>
    <p>
      Show on tablet:
    </p>
<% end %>

  <%= form_tag("#{tablet_send_notification_path(tablet_id: @tablet.id)}", method: "post") do %>
    <%= label_tag(:first_name, "First name:") %>
    <%= text_field_tag(:first_name) %>

    <%= label_tag(:last_name, "Last name:") %>
    <%= text_field_tag(:last_name) %>

    <%= label_tag(:address, "Address:") %>
    <%= text_field_tag(:address) %>

    <%= label_tag(:account_number, "Account number:") %>
    <%= text_field_tag(:account_number) %>

    <%= submit_tag("Show") %>
<% end %>


<%= link_to 'Back', tablets_path %>
