<p id="notice"><%= notice %></p>

<% if @user.is_admin %>

  <p>
    <strong>Name:</strong>
    <%= @tablet.name %>
  </p>

  <p>
    <strong>Token:</strong>
    <%= @tablet.token %>
  </p>

  <%= link_to 'Edit', edit_tablet_path(@tablet) %> |
<% else %>
    <h1 class="h1">
      Show user data on tablet:
    </h1>
<% end %>

  <%= form_tag("#{tablet_send_notification_path(tablet_id: @tablet.id)}", method: "post") do %>
    <div class="form-group">
      <%= label_tag(:first_name, "First name:") %>
      <%= text_field_tag :first_name , "John", { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= label_tag(:last_name, "Last name:") %>
      <%= text_field_tag :last_name, "Smith", { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= label_tag(:address, "Address:") %>
      <%= text_field_tag :address, "White house", { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= label_tag(:account_number, "Account number:") %>
      <%= text_field_tag :account_number, "123", { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= submit_tag "Show", { class: "btn btn-primary form-control" } %>
    </div>

<% end %>


<%= link_to 'Back', tablets_path %>
